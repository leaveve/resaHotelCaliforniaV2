<!DOCTYPE html>
<html lang="fr">
<head>
<meta charset="UTF-8">
<title>Liste des chambres</title>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>

<body class="bg-light">

<div class="container mt-5 p-4 bg-white shadow rounded">

    <h1 class="text-center mb-4">Liste des chambres</h1>

    <a href="/chambres/create" class="btn btn-primary mb-3">Ajouter une chambre</a>

    <table class="table table-bordered table-hover">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Numéro</th>
                <th>Type</th>
                <th>Prix</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            <% chambres.forEach(c => { %>
            <tr>
                <td><%= c.id %></td>
                <td><%= c.numero %></td>
                <td><%= c.type %></td>
                <td><%= c.prix %> €</td>
                <td>
                    <a href="/chambres/<%= c.id %>/edit" class="btn btn-sm btn-warning">Modifier</a>
                    <a href="/chambres/<%= c.id %>/delete" class="btn btn-sm btn-danger">Supprimer</a>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>

</div>

</body>
</html>
